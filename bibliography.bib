issn = {0894-8755},
journal = {Journal of Climate},
month = {may},
number = {5},
pages = {963--977},
publisher = {American Meteorological Society},
title = {{A Degeneracy in Cross-Validated Skill in Regression-based Forecasts}},
url = {http://dx.doi.org/10.1175/1520-0442(1993)006<0963:ADICVS>2.0.CO 2},
