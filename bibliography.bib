issn = {0883-4237},
journal = {Statistical Science},
keywords = {Bayesian model averaging,Schaake shuffle,Sklar's theorem,and phrases,bayesian model averaging,empirical copula,ensemble calibration,nonhomogeneous regression,numerical weather pre-,numerical weather prediction,probabilistic forecast},
month = {feb},
