@techreport{Kerkhoff2014,
abstract = {Climate science poses an interesting yet challenging field of application for state-of-the-art statistical methodology, since atmospheric phenom- ena include a wide range of scales spanning from microscopic (e.g. ice nucleation in clouds) to global (e.g. the Hadley Circulation) scales and exhibit complex interactions. A cornerstone in the assessment of the climate state are comprehensive computer models. Although these models are deterministic, it is natu- ral to interpret their output from a statistical view point. This is due to the stochastic nature of the climate system including a large number of degrees of freedom and non-linear or chaotic behavior on different scales. Analyzing climate model output is challenging for manifold rea- sons: the enormous amount of data produced by typical climate models, the complex dependencies between different output fields and models, the long time scales that hamper validation etc. This thesis develops statistical methods to analyze climate data and thereby tackles an important issue in climate research, namely the choice of bias assumption in the post-processing of climate data. Bi- ases or errors in climate models occur for various reasons: numerical uncertainties and mistakes in the computer code, missing processes, pa- rameterizations of phenomena acting on scales smaller than the model’s grid resolution and so on. Comparing models with observations in the past and present, these biases become evident. The output from cli- mate models is thus only a “contaminated” version of reality, and be- cause future observations are not available, extrapolation assumptions for climate model biases are indispensable to estimate true changes. This thesis investigates prominent bias assumptions and analyzes their x Abstract validity under climate change. We use 2m temperatures from the EU ENSEMBLES project – a large climate change research initiative for Europe – and study the driving global climate models (GCMs) as well as their high-resolution regional counterparts (RCMs). Contrary to the well-established belief that bias changes are negligible compared to climate change, our analyses suggest that these changes are significant. It is therefore advisable to allow for time-dependent biases. Additionally, we find that although relations between RCMs and their driving GCM are strong and in principle linear, RCMs reduce biases of their drivers. In agreement with these findings, we have developed a Bayesian hier- archical model that allows a coherent and holistic analysis of heteroge- neous RCM-GCM multi-model ensembles. All relevant assumptions on which our statistical model rests upon are transparently set out. Our approach is superior to alternative statistical modeling proposals due to its flexible functional form that allows for multidecadal variability and enables an integral analysis of climate time series. Our results have also implications for the design of prospective RCM-GCM multi- model ensembles, namely, independent RCM-GCM chains are a key to maximizing predictive power. Methods developed in this thesis are neither constrained to specific data sets nor certain climate variables but are generic and transferable.},
author = {Kerkhoff, Christian},
file = {:/meteoswiss.ch/mch/zue-prod/climate/basic{\_}serv/prediction/bhj/papers/Kerkhoff2014{\_}Diss.pdf:pdf},
institution = {PhD Thesis, ETH Zurich, Switzerland},
number = {22235},
pages = {124},
title = {{Statistical Methods to Analyze Climate Model Output}},
year = {2014}
}
